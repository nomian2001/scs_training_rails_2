<div class="container_group">

<h1>Containers</h1>

<table>
  <thead>
    <tr class="container_title">
      <th>Container type</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @containers.each do |container| %>
      <tr class="container_result">
        <td><%= container.container_type %></td>
        <td>
          <%= link_to container do %>
            <i class="fas fa-eye"></i>
          <%end%>
        </td>
        <td>
          <%= link_to edit_container_path(container) do %>
            <i class="fas fa-edit"></i>
          <%end%>
        </td>
        <td>
          <%= link_to container, method: :delete, data: { confirm: 'Are you sure?' } do %>
            <i class="fas fa-trash-alt"></i>
          <%end%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

  <div class="btn btn-success float-end mt-5">
    <%= link_to 'New Container', new_container_path %>
  </div>
</div>




<%= form_with(model: container) do |form| %>
  <% if container.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(container.errors.count, "error") %> prohibited this container from being saved:</h2>

      <ul>
        <% container.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="container_group">
    <%= form.label :container_type %>
    <%= form.select :container_type, ['FR20', 'FR40', 'OT20','OT40'] %>
  </div>

  <table class="item_group">
    <tr>
      <th rowspan="2" >SEQ</th>
      <th rowspan="2">PACKING STYLE</th>
      <th colspan="4"> SIZE </th>
      <th colspan="2"> GROSS WEIGHT </th>
      <th colspan="2"> CENTER OF GRAVITY HEIGHT</th>
      <th rowspan="2"> ACTIONS </th>
    </tr>
    
    <tr>
      <td>LENGTH</td>
      <td>WIDTH</td>
      <td>HEIGHT</td>
      <td>UNIT</td>
      <td>WEIGHT</td>
      <td>UNIT</td>
      <td>HEIGHT</td>
      <td>UNIT</td>
    </tr>
  </table>

  <div class="actions">
    <%= form.submit "Submit"%>
    <%= link_to "Add", :new_item%>
  </div>
<% end %>